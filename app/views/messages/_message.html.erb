<div class="row m-4">
  <div class="col-2 offset-sm-4 col-sm-1 p-0">
    <figure>
      <%= link_to user_path(message.user) do %>
       <%= attachment_image_tag message.user, :profile_image, :fill, 1000, 1000,fallback: "no-image.png", class: "profile_image" %>
      <% end %>
    </figure>
  </div>
  <div class="col-10 col-sm-7 h5 pt-2 pr-0">
    <div>
      <span class=""><%= message.content %></span>
    </div>
    <div class="update text-right pt-1">
      <time><%= message.updated_at.strftime("%Y-%m-%d %H:%M") %></time>投稿
    </div>
  </div>
</div>